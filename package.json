{
  "name": "family-care-hackathon",
  "version": "1.0.0",
  "private": true,
  "description": "Family Care - Health Management Dashboard",
  "scripts": {
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:lint": "oxlint frontend/",
    "frontend:lint:fix": "oxlint --fix frontend/",
    "frontend:format": "cd frontend && npm run format",
    "frontend:format:check": "cd frontend && npm run format:check",
    "backend:dev": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "backend:lint": "ruff check backend/ --fix",
    "backend:format": "ruff format backend/",
    "backend:check": "ruff check backend/",
    "lint": "npm run frontend:lint && npm run backend:check",
    "lint:fix": "npm run frontend:lint:fix && npm run backend:lint",
    "format": "npm run frontend:format && npm run backend:format"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "oxlint": "^1.24.0"
  }
}
